@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h3>@ViewData["Title"]</h3>

<form id="account" method="post">

    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" id="myInput" class="form-control" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="clearfix" style="margin-bottom:20px;">
        <input type="checkbox" onclick="myFunction()" style="float:left;"><span style="float:left;">Show Password</span>
    </div>
    <div class="fo-s">
        <div class="form-floating">
            <input class="" asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </div>
        <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password">Forgot Password</a>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
    </div>

</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
