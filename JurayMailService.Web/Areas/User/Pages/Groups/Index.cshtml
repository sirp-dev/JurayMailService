@page
@model JurayMailService.Web.Areas.User.Pages.Groups.IndexModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">EMAIL GROUP MANAGER</h3>

        <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Name
                        </th>

                        <th>Emails</th>


                    </tr>
                </thead>

                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.EmailGroups.OrderByDescending(x => x.Name))
                    {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                <a asp-page="./Info" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Name)

                                </a>
                            </td>
                            <td>
                                @item.Emails.Count()
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
