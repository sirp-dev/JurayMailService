@page
@model JurayMailService.Web.Areas.Admin.Pages.ManagerUser.InfoModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">USER INFORMATION</h6>


            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="row">
                                <div class="col-md-12">
                                    <dl class="row">


                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.AppUser.Email)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.AppUser.Email)
                                        </dd>


                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.AppUser.Fullname)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.AppUser.Fullname)
                                        </dd>

                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.AppUser.Date)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.Raw(Model.AppUser.Date)
                                        </dd>



                                    </dl>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
                <a asp-page="./Update" asp-route-id="@Model.AppUser.Id" class="btn btn-danger btn-sm">Update</a>
                <a asp-page="/ManageServers/ServerByUser" asp-route-id="@Model.AppUser.Id" class="btn btn-danger btn-sm">Servers</a>
            </div>
        </div>
    </div>
</div>